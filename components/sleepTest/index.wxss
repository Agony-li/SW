
/* 进度条 */
.part_title {
  font-size: 30rpx;
  font-weight: 700;
  padding: 34rpx 24rpx 0;
}
.progress-content {
  width: 100%;
  height: 90rpx;
  padding: 0 25rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.mini-progress {
  width: 85%;
}
.progress-num {
  width: 15%;
  text-align: right;
  font-size: 25rpx;
  color: #333;
}
/* 题 */
.test-content {
  margin: 0 24rpx;
  background-color: #fff;
  padding: 39rpx 0;
  font-size: 25rpx;
  line-height: 36rpx;
  border-radius: 12rpx;
  box-shadow: 0px 4px 13px 0px #E8EDEC;
}
.question {
  display: flex;
  margin-bottom: 41rpx;
  padding: 0 24rpx;
}
.question_num {
  font-weight: 700;
  width: 48rpx;
  text-align: center;
}
.question-name {
  font-weight: 700;
  flex: 1;
}
/* 选项 */
.question-choice {
  font-size: 25rpx;
  color: #333;
}
.word-box {
  height: 71rpx;
  padding-left: 72rpx;
  font-weight: 700;
}
.choice-detail {
  line-height: 71rpx;
}
.choose_choice {
  width: 100%;
  box-sizing: border-box;
  background-color: rgba(63,171,140,0.18);
  color: #36BC96;
}
/* 按钮 */
.pre-next-content {
  display: flex;
  margin: 25rpx;
}
.pre-next-content view{
  height: 74rpx;
  background-color: #36BC96;
  border-radius: 12rpx;
  color: #fff;
  font-size: 30rpx;
  line-height: 74rpx;
  width: 100%;
  text-align: center;
  
}
.pre-next-content .pre-last-btn {
  border: 1px solid #36BC96;
  background-color: #F2F4F5;
  color: #36BC96;
}




