.containers{
    height: 100%;
    padding: 22rpx 30rpx;
    box-sizing: border-box;
    background:#f2f2f2;
}
.goods-img image{
    width:303rpx;
height:149rpx;
border-radius:8rpx;
}
.goods-content{
    background: #ffffff;
}
.goods-content{
    padding: 30rpx;
    box-sizing: border-box;  
}
.goods-info{
    display: flex;
    flex-flow: row;
  
}
.d-1{
font-size:34rpx;
font-family:PingFangSC-Medium;
font-weight:500;
color:rgba(75,75,75,1);
line-height:48rpx;
margin-top: 17rpx;
margin-bottom: 20rpx;
}
.d-2{
    font-size:28rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(153,153,153,1);
}
.goods-detail{
    margin-left: 20rpx;
}
.goods-num{
    display: flex;
    flex-flow: row;
    align-items:center;
    justify-content: space-between;
}
.n-1{
    font-size:30rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(44,47,55,1);
}
.n-2{
    display: flex;
    flex-flow: row;
}
.n-3{
    width:70rpx;
height:70rpx;
background:rgba(237,239,240,1);
border-radius:8rpx;
color: #878D99;
display: flex;
flex-flow: row;
justify-content: center;
align-items: center;
/* font-size: 30rpx; */
}
.nums{
    width:90rpx;
height:70rpx;
border-radius:8rpx;
border:1rpx solid rgba(227,229,230,1);
font-size:30rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(75,75,75,1);
display: flex;
flex-flow: row;
justify-content: center;
align-items: center;
margin: 0 10rpx;

}
.n-4{
    width:70rpx;
height:70rpx;
/* background:rgba(0,191,255,1); */
background: #36BC96;
border-radius:8rpx;
color: #ffffff;
display: flex;
flex-flow: row;
justify-content: center;
align-items: center;
}
.discount{
    margin-top: 30rpx;
    padding: 0 30rpx;
    box-sizing: border-box;
    width:690rpx;
height:120rpx;
background:rgba(255,255,255,1);
border-radius:8rpx;
    display: flex;
    flex-flow: row;
    align-items: center;
    justify-content: space-between;
}
.discount-code{
    font-size:32rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(75,75,75,1);
}
.discount input {
    text-align: right;
    font-size: 32rpx;
}
.discount-card{
    font-size:28rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(148,153,165,1);
margin-left: 29rpx;
margin-top: 10rpx;
}
.total{
    font-size:36rpx;
font-family:HelveticaNeue;
color:rgba(225,3,3,1);
}
.pay{
    margin-top: 100rpx;
    width:690rpx;
height:100rpx;
/* background:rgba(0,191,255,1); */
background: #36BC96;
border-radius:8rpx;
font-size:32rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(255,255,255,1);
line-height: 100rpx;
text-align: center;
}
.pay-icon image{
    width: 210rpx;
    height: 210rpx;
}
.pay-word{
    font-size:30rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(102,102,102,1);
line-height: 1;
}
.pay-num{
    margin-top: 30rpx;
    font-size:60rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(51,51,51,1);
line-height: 1;
}
.pay-finish{
    text-align: center;
    font-size: 0;
}
.pay-1{
    width:550rpx;
height:82rpx;
/* background:rgba(0,191,255,1); */
background: #36BC96;
box-shadow:0px 7rpx 31rpx 3rpx rgba(0,191,255,0.39);
border-radius:8rpx;
font-size:28rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(255,255,255,1);
margin: 100rpx auto 56rpx auto;
line-height: 82rpx;
}
.pay-2{
    width:550rpx;
height:80rpx;
border-radius:8rpx;
border:2rpx solid rgba(0,191,255,1);
font-size:28rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(0,191,255,1);
line-height: 80rpx;
margin: 0 auto;
}