.page__bd {
  height: 100%;
  background-color: #F2F4F5;
}

.page__bd {
  padding-bottom: 0;
}
.weui-tab {
  margin: 37rpx 24rpx 24rpx;
  box-sizing: border-box;
}

.weui-tab__content {
  text-align: center;
  border-radius: 12rpx;
  box-shadow: 0px 4rpx 13rpx 0px #E8EDEC;
}

.weui-navbar__slider {
  width: 30rpx;
  background: #36BC96;
}

