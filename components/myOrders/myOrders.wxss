/* pages/mastersaidlist/mastersaidlist.wxss */
.order_list {
  padding: 36rpx 24rpx;
}
.list_tab {
  width: 100%;
  height: 85rpx;
  background-color: #fff;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: space-evenly;
  margin-bottom: 24rpx;
}
.tab_title {
  /* width: 33.33%;
  text-align: center; */
  font-size: 25rpx;
  font-weight: 700;
}
.active {
  color: #36BC96;
}
.active:after{
  content: "";
  display: block;
  position: relative;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 30rpx;
  height: 4rpx;
  background: #36BC96;
  border-radius: 2rpx;
}

/* 订单列表 */
.order_item {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0rpx 4rpx 13rpx 0rpx #E8EDEC;
  margin-bottom: 24rpx;
}
.order_top {
  margin: 0 25rpx;
  height: 89rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #E7E7E7;
}
.status_des {
  font-size: 25rpx;
  font-weight: 700;
}
.order_time {
  font-size: 25rpx;
  color: #999999;
}
.order_info {
  padding: 39rpx 0 35rpx;
  margin:  0 24rpx;
  
  display: flex;
  box-sizing: border-box;
}
.info_left image {
  width: 300rpx;
  height: 165rpx;
  border-radius: 12rpx;
  margin-right: 28rpx;
}
.info_right {
  flex: 1;
}
.info_title {
  font-size: 25rpx;
  font-weight: 700;
}
.info_price {
  font-size: 30rpx;
  font-weight: 700;
}
.order_total_count {
  text-align: right;
  font-size: 30rpx;
  font-weight: 700;
  padding-top: 40rpx;
}
.btn {
  text-align: right;
  padding: 16rpx 24rpx;
  border-top: 1rpx solid #E7E7E7;
}
.btn view{
  font-size: 25rpx;
  display: inline-block;
  padding: 16rpx 48rpx;
  border-radius: 35rpx;
  margin-left: 14rpx;
}
.cancel {
  background-color: #fff;
  border: 1rpx solid rgba(153, 153, 153, 0.78);
  color: #999999;
}
.pay {
  background-color: #36BC96;
  color: #fff;
}