/* components/myBonus/index.wxml.wxss */
.header {
  margin: 0 24rpx;
  box-sizing: border-box;
  overflow: hidden;
  margin-bottom: 24rpx;
}
.header::after {
  content: " ";
  width: 100%;
  height: 220rpx;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
  border-radius: 0 0 45% 45%;
  background-color: #36BC96;
  box-sizing: border-box;
}
.header_content {
  text-align: center;
}
.header_title {
  font-size: 25rpx;
  color: #FEFEFE;
}
.total_money {
  font-size: 60rpx;
  color: #FFFFFF;
  font-weight: 700;
}
.rules {
  height: 89rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #FFFFFF;
  box-sizing: border-box;
  border-radius: 12rpx;
  padding: 0 24rpx;
}
.rules_left {
  font-size: 30rpx;
  color: #333;
}
.arrow {
  width: 13rpx;
  height: 22rpx;
}

/* 奖励明细 */
.list {
  margin: 0 24rpx;
  background-color: #FFFFFF;
  border-radius: 12rpx;
}
.item{
  display: flex;
  justify-content: space-between;
  height: 100rpx;
  align-items: center;
  margin: 0 25rpx;
  border-bottom: 1rpx solid #E7E7E7;
}
.item:last-child {
  border: none;
}
.item_title {
  font-size: 28rpx;
  color: #333;
}
.item_date {
  font-size: 22rpx;
  color: #999;
}
.item_right {
  font-size: 30rpx;
  color: #333;
}
/* 按钮 */
.btn {
  margin: 24rpx;
  height: 74rpx;
  background-color: #36BC96;
  box-sizing: border-box;
  border-radius: 12rpx;
  text-align: center;
  line-height: 74rpx;
  color: #FFFFFF;
  font-size: 30rpx;
}
/* 无数据 */
.nodata {
  text-align: center;
}
.nodata_img {
  margin-top: 80rpx;
  width: 655rpx;
  height: 383rpx;
}
.nodata_des {
  font-size: 25rpx;
  color: #333333;
}