@import"../../wxParse/wxParse.wxss";
.containers{
    padding-left:20px;
    padding-right:20px;
    box-sizing: border-box;
    background:#f2f2f2;
}
.lession-content-1{
    width: 100%;
    font-size: 0;
    height: 400rpx;
}
#myVideo{
    width: 100%;
    height: 400rpx;
}
.lession-content-2{
    margin-top: 20rpx;
    width: 100%;
    background: #ffffff;
}
.lession-tab{
    width: 100%;
    box-sizing: border-box;
    height: 90rpx;
    display: flex;
    flex-flow: row;
    align-items: center;
    justify-content: space-around;
    border-bottom: 2rpx solid rgba(204,204,204,1);

}
.tab-1{
    font-size:30rpx;
font-family:PingFangSC-Medium;
font-weight:500;
color:rgba(0,191,255,1);
border-bottom: 3rpx solid #00BFFF;
width:180rpx;
padding-bottom: 18rpx;
padding-top: 18rpx;
text-align: center;
}
.tab-2{
    font-size:30rpx;
font-family:PingFangSC-Regular;
font-weight:400;
width:180rpx;
color:rgba(153,153,153,1);
padding-bottom: 18rpx;
padding-top: 18rpx;
text-align: center;

}
.buy-btn-content{
    position: fixed;
    bottom: 0;
    width: 100%;
    display: flex;
    flex-flow: row;
    align-items: center;
    box-sizing: border-box;
    z-index: 10;
}
.buy-btn-content button{
    display: flex;
    flex-flow: column;
    width: 140rpx;
    height: 120rpx;
    border: none;
    background: #fff;
    font-size: 0;
    align-items: center;
    justify-content: center;
}
.buy-btn-content button::after{
    border: none;
}
.service-name{
    font-size:26rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(128,128,128,1);
line-height: 1;
margin-top: 5rpx;
}
.service-icon{
    width: 48rpx;
    height: 48rpx;
}
.pay-btn{
    width:100%;
height:120rpx;
/* background:rgba(0,191,255,1); */
background: #36BC96;
font-size:32rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(255,255,255,1);
line-height: 120rpx;
text-align: center;
}
.lession-tab-2{
    padding: 0 30rpx;
}
.l-1{
    font-size:34rpx;
font-family:PingFangSC-Medium;
font-weight:500;
color:rgba(77,77,77,1);
margin-top: 40rpx;
margin-bottom: 40rpx;
}
.l-2{
    display: flex;
    flex-flow: row;
    justify-content: space-between;
    padding-bottom: 50rpx;
}
.l-2-left{
    font-size:30rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(77,77,77,1);
}
.l-2-right{
    display: flex;
    flex-flow: row;
    justify-content: space-between;
}
.l-2-img{
    width: 34rpx;
    height: 34rpx;
    margin-right: 20rpx;
}
.l-2-time{
    font-size:24rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(153,153,153,1);
}

.title{
    font-size:38rpx;
font-family:PingFangSC-Medium;
font-weight:500;
color:rgba(51,51,51,1);
line-height:53rpx;
}
.article-time{
    margin-top: 30rpx;
    font-size:28rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(153,153,153,1);
line-height:40rpx;
}
.article-content{
    margin-top: 30rpx;
    font-size:30rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(77,77,77,1);
line-height:50rpx;
}