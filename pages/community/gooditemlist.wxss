/* pages/community/gooditemlist.wxss */
.itemlist {
  padding: 36rpx 24rpx;
}
.item {
  width: 100%;
  height: 280rpx;
  background-color: #fff;
  box-sizing: border-box;
  border-radius: 12rpx;
  box-shadow: 0rpx 4rpx 13rpx 0rpx #E8EDEC;
  padding: 44rpx 0 57rpx;
  display: flex;
  margin-bottom: 25rpx;
}
.left_img image {
  width: 138rpx;
  height: 179rpx;
  padding-left: 87rpx;
  padding-right: 92rpx;
}
.item_title {
  font-size: 30rpx;
  line-height: 36rpx;
  font-weight: 700;
}
.item_des {
  font-size: 25rpx;
  line-height: 36rpx;
  color: #333333;
}
.item_price {
  font-size: 25rpx;
  line-height: 36rpx;
  color: #FE6631;
  background: rgba(255, 171, 51, 0.15);
  padding: 0 7rpx;
  border-radius: 6rpx;
  margin-top: 46rpx;
}
