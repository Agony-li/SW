<wxs src="../../utils/filter.wxs"  module="filter"></wxs>
<import src="../../wxParse/wxParse.wxml" />
<!-- 文章详情 -->
<view class="articledetail">
  <view class="article_header">
    <view class="article_title">{{detail.title}}</view>
    <view class="article_des">
      <text class="article_author">喜知悦行</text>
      <text>{{filter.splitDate(detail.updateDate)}}</text>
    </view>
  </view>
  <view class="article_content">
    <view class="article_audio">
    <view class="audo">
      <view class="audio_image">
        <image wx:if="{{isPlay==0}}" src="../../images/play.png" bindtap="playAudio"></image>
        <image wx:else src="../../images/pause.png" bindtap="playPause"></image>
      </view>
      <view class="audio_info">
        <view class="audio_title">{{bgAudio.title}}</view>
        <view class="audio_silder">
          <!-- 不可拖动进度条 -->
          <slider class="slider" disabled="true" max="{{max}}" value="{{value}}" block-size="12"></slider>
          <view class="alltime">{{duration}}</view>
        </view>
        <view class="audio_author">{{bgAudio.singer}}</view>
      </view>
    </view>
      <!-- <bgAudio bind:endAutoPlay="endAutoPlay" bgAudio="{{bgAudio}}"></bgAudio> -->
      <!-- <audio poster="{{audio.poster}}" name="{{audio.name}}" author="{{audio.author}}" src="{{audio.src}}" id="myAudio" controls bindtap="audioPlay" bindended="endAutoPlay"></audio> -->
    </view>
    <template is="wxParse" data="{{wxParseData:article.nodes}}" />
  </view>
</view>
