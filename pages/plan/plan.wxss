.header {
  height: 210rpx;
  background-color: #36BC96;
}

.header_info {
  display: flex;
  height: 210rpx;
  justify-content: space-between;
  align-items: center;
  padding-left: 56rpx;
  padding-right: 49rpx;
}

.header_left {
  display: flex;
  align-items: center;
}

.header_icon {
  width: 137rpx;
  height: 137rpx;
  background-color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.header_img {
  width: 117rpx;
  height: 117rpx;
  border-radius: 50%;
}

.header_name {
  font-size: 42rpx;
  font-weight: 700;
  color: #fff;
  padding-left: 33rpx;
  line-height: 42rpx;
}
.plan_name {
  font-size: 25rpx;
  color: #fff;
  padding-left: 33rpx;
  margin-top: 24rpx;
  line-height: 25rpx;
}
.plan_date {
  font-size: 22rpx;
  line-height: 22rpx;
  color: #fff;
  padding-left: 33rpx;
  margin-top: 11rpx;
}
.header_right_i image{
  width: 36rpx;
  height: 36rpx;
}
/* 背景 */
.bg {
  height: 200rpx;
  background-color: #36BC96;
  position: relative;
}
/* 内容 */
.content {
  margin: 0 24rpx;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
}
.plan_type_title {
  
  height: 136rpx;
  font-size: 30rpx;
  font-weight: bold;
  background-color: #fff;
  display: flex;
  align-items: center;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
  border-bottom: 1rpx solid #E7E7E7;
  justify-content: space-evenly;
}
.plan_type_title::before{
  content: '';
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background-color: #36BC96;
  position: absolute;
  left: -16rpx;
  top: 120rpx;
}
.plan_type_title::after{
  content: '';
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background-color: #36BC96;
  position: absolute;
  right: -16rpx;
  top: 120rpx;
}
.active_plan {
  color: #36BC96;
}
.active_plan:after{
  content: "";
  display: block;
  position: relative;
  top: 8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 30rpx;
  height: 4rpx;
  background: #36BC96;
  border-radius: 2rpx;
}
/* 准备阶段 */
.plan_ready {
  background-color: #fff;
  padding: 36rpx 24rpx;
  border-bottom-left-radius: 16rpx;
  border-bottom-right-radius: 16rpx;
}
.des {
  font-size: 25rpx;
}
.plan_ready_options {
  margin-top: 23rpx;
}
.option {
  font-size: 25rpx;
  line-height: 25rpx;
  background-color: #F5F5F5;
  border-radius: 31rpx;
  display: flex;
  justify-content: space-between;
  padding: 17rpx 27rpx;
  color: #333;
  margin-bottom: 24rpx;
  align-items: center;
  box-sizing: border-box;
}
.option_xuanxaing {
  display: flex;
}
.option .number {
  padding-right: 24rpx;
}
.option image {
  width: 29rpx;
  height: 29rpx;
}
.option_des {
  display: inline-block;
  max-width: 526rpx;
}
.options_active {
  border: 1rpx solid #36BC96;
  background: rgba(54, 188, 150, 0.2);
  box-sizing: border-box;
}
.option_xuanxaing .risk{
  font-size: 25rpx;
  line-height: 25rpx;
  color: #279CFF;
}
.btn {
  background-color: #36BC96;
  height: 74rpx;
  margin: 40rpx 24rpx 46rpx;
  font-size: 30rpx;
  line-height: 74rpx;
  text-align: center;
  border-radius: 12rpx;
  color: #fff;
  font-weight: 700;
}

/* 课程 */
