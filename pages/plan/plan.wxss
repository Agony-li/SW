.header {
  height: 210rpx;
  background-color: #36BC96;
}

.header_info {
  display: flex;
  height: 210rpx;
  justify-content: space-between;
  align-items: center;
  padding-left: 56rpx;
  padding-right: 49rpx;
}

.header_left {
  display: flex;
  align-items: center;
}

.header_icon {
  width: 137rpx;
  height: 137rpx;
  background-color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.header_img {
  width: 117rpx;
  height: 117rpx;
  border-radius: 50%;
}

.header_name {
  font-size: 42rpx;
  font-weight: 700;
  color: #fff;
  padding-left: 33rpx;
  line-height: 42rpx;
}
.plan_name {
  font-size: 25rpx;
  color: #fff;
  padding-left: 33rpx;
  margin-top: 24rpx;
  line-height: 25rpx;
}
.plan_date {
  font-size: 22rpx;
  line-height: 22rpx;
  color: #fff;
  padding-left: 33rpx;
  margin-top: 11rpx;
}
.header_right_i image{
  width: 36rpx;
  height: 36rpx;
}
/* 背景 */
.bg {
  height: 200rpx;
  background-color: #36BC96;
  position: relative;
}
/* 内容 */
.content {
  margin: 0 24rpx;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
}
.plan_type_title {
  
  height: 136rpx;
  font-size: 30rpx;
  font-weight: bold;
  background-color: #fff;
  display: flex;
  align-items: center;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
  border-bottom: 1rpx solid #E7E7E7;
  justify-content: space-evenly;
}
.plan_type_title::before{
  content: '';
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background-color: #36BC96;
  position: absolute;
  left: -16rpx;
  top: 120rpx;
}
.plan_type_title::after{
  content: '';
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background-color: #36BC96;
  position: absolute;
  right: -16rpx;
  top: 120rpx;
}
.active_plan {
  color: #36BC96;
}
.active_plan:after{
  content: "";
  display: block;
  position: relative;
  top: 8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 30rpx;
  height: 4rpx;
  background: #36BC96;
  border-radius: 2rpx;
}
/* 准备阶段 */
.plan_ready {
  background-color: #fff;
  padding: 36rpx 24rpx;
  border-bottom-left-radius: 16rpx;
  border-bottom-right-radius: 16rpx;
}
.des {
  font-size: 25rpx;
}
.plan_ready_options {
  margin-top: 23rpx;
}
.option {
  font-size: 25rpx;
  line-height: 25rpx;
  background-color: #F5F5F5;
  border-radius: 31rpx;
  display: flex;
  justify-content: space-between;
  padding: 17rpx 27rpx;
  color: #333;
  margin-bottom: 24rpx;
  align-items: center;
  box-sizing: border-box;
}
.option_xuanxaing {
  display: flex;
}
.option .number {
  padding-right: 24rpx;
}
.option image {
  width: 29rpx;
  height: 29rpx;
}
.option_des {
  display: inline-block;
  max-width: 526rpx;
}
.options_active {
  border: 1rpx solid #36BC96;
  background: rgba(54, 188, 150, 0.2);
  box-sizing: border-box;
}
.option_xuanxaing .risk{
  font-size: 25rpx;
  line-height: 25rpx;
  color: #279CFF;
}
.btn {
  background-color: #36BC96;
  height: 74rpx;
  margin: 40rpx 24rpx 46rpx;
  font-size: 30rpx;
  line-height: 74rpx;
  text-align: center;
  border-radius: 12rpx;
  color: #fff;
  font-weight: 700;
}

/* 未购买订单情况 */
.no_order_tip {
  font-size: 25rpx;
  line-height: 36rpx;
  padding: 70rpx 50rpx 50rpx;
}
.no_order_des{
  font-size: 25rpx;
  line-height: 36rpx;
  padding: 0 50rpx 260rpx;
}

/* 课程 */
.course {
  background-color: #fff;
  border-bottom-left-radius: 16rpx;
  border-bottom-right-radius: 16rpx;
}
.course_icon {
  display: flex;
  padding: 24rpx 24rpx 17rpx;
}
.course_item {
  position: relative;
  width: 130rpx;
}
.course_item view {
  font-size: 25rpx;
  line-height: 25rpx;
  width: 50rpx;
  height: 50rpx;
  color: #fff;
  text-align: center;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.course_icon image {
  height: 141rpx;
}

.course_des {
  font-size: 25rpx;
  line-height: 36rpx;
  padding: 0 25rpx 260rpx;
}
.course_btn {
  line-height: 73rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.course_btn .course_num{
  display: inline-block;
  width: 28rpx;
  height: 28rpx;
  background-color: #fff;
  border-radius: 50%;
  color: #36BC96;
  text-align: center;
  line-height: 28rpx;
  font-size: 22rpx;
  font-weight: 700;
  margin-left: 11rpx;
}

/* 任务 */
.task {
  background-color: #fff;
  border-bottom-left-radius: 16rpx;
  border-bottom-right-radius: 16rpx;
  padding-bottom: 50rpx;
}
/* 任务头部 */
.task_header {
  height: 158rpx;
  padding: 0 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.task_header image {
  width: 11rpx;
  height: 18rpx;
}
.left_week, .right_week{
  display: flex;
  align-items: center;
  font-size: 25rpx;
}
.left_week view, .right_week view {
  padding: 0 13rpx;
}
.center_week view {
  font-size: 30rpx;
  line-height: 30rpx;
  font-weight: 700;
  text-align: center;
}
.center_week text {
  font-size: 22rpx;
  line-height: 22rpx;
}

/* 日期表格 */
.task_table {
  margin: 0 24rpx;
  background-color: #ECF6F3;
  border-radius: 12rpx;
}
.task_table .ul_week{
  display: flex;
  height: 119rpx;
  border-bottom: 1rpx solid #E7E7E7;
  box-sizing: border-box;
}
.task_table .ul_week .li_week {
  width: 80rpx;
  font-size: 25rpx;
  line-height: 25rpx;
  font-weight: 700;
  text-align: center;
  padding: 26rpx 0 24rpx;
}
.li_week view:first-child{
  margin-bottom: 24rpx;
}
.ul_content {
  display: flex;
}
.ul_content .left {
  font-size: 25rpx;
  font-weight: 700;
  background-color: #ECF6F3 !important;
}
.ul_content .left image{ 
  width: 24rpx;
  height: 25rpx;
}
.ul_content .li {
  width: 100%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  background-color: #F8F8F8;
}
.li .duihao {
  width: 27rpx;
  height: 22rpx;
}
.li .kong, .shi {
  width: 25rpx;
  height: 25rpx;
}
.li .jia, .dai {
  width: 36rpx;
  height: 36rpx;
}
.tip {
  margin-top: 24rpx;
  height: 79rpx;
  width: 100%;
  background-color: #fff;
  border-radius: 39rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  box-sizing: border-box;
  font-size: 25rpx;
  color: #333;
}
.tip image{
  width: 25rpx;
  height: 25rpx;
  padding-right: 11rpx;
}

/* 月历 */
.yueli{
  width: 100%;
  height: 550rpx;
  background-color: pink;
}
.calendar {
  --calendar-height: 700rpx;
  border-radius: 12rpx;
}
.van-calendar__day {
  height: 90rpx !important;
}

/* 弹窗 */
.shadowBg {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.6);
}
.dialog {
  background-color: #fff;
  width: 700rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  border-radius: 12rpx;
}
.dialog .title {
  font-size: 30rpx;
  line-height: 30rpx;
  color: #333333;
  font-weight: 700;
  padding: 46rpx 0 58rpx;
  text-align: center;
}
.dialog_content {
  padding-left: 155rpx;
}
.content_item {
  display: flex;
  align-items: center;
  font-size: 25rpx;
  line-height: 25rpx;
  padding-bottom: 24rpx;
}
.content_item image{
  width: 36rpx;
  height: 36rpx;
  padding-right: 14rpx;
}
.dialog_btn {
  width: 100%;
  height: 102rpx;
  background-color: #36BC96;
  border-bottom-left-radius: 12rpx;
  border-bottom-right-radius: 12rpx;
  font-size: 29rpx;
  line-height: 102rpx;
  text-align: center;
  color: #fff;
  margin-top: 46rpx;
}
.dialog_content_image {
  text-align: center;
  padding-bottom: 58rpx;
}
.dialog_content_image image{
  width: 179rpx;
  height: 242rpx;
}
.dialog_des {
  padding: 0 35rpx;
  font-size: 25rpx;
  line-height: 36rpx;
  color: #333333;
}
.dialog_double_btn {
  display: flex;
  margin-top: 37rpx;
  border-top: 1rpx solid #C1C1C1;
}
.dialog_double_btn view {
  width: 50%;
  height: 100rpx;
  text-align: center;
  font-size: 29rpx;
  line-height: 100rpx;
  color: #36BC96;
}
.dialog_double_btn view:first-child {
  border-right: 1rpx solid #C1C1C1;
  color: #333333;
}