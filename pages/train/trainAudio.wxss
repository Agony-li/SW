.content {
  background-color: #fff;
  margin: 36rpx 24rpx 24rpx;
  border-radius: 12rpx;
}
.content image {
  width: 100%;
  height: 298rpx;
}
.content .title {
  padding: 30rpx 24rpx 0;
  font-size: 30rpx;
  line-height: 30rpx;
  font-weight: 700;
  color: #333;
}
.content .des {
  padding: 16rpx 24rpx 33rpx;
  font-size: 24rpx;
  line-height: 24rpx;
  color: #999999;
}
.btn {
  margin: 0 24rpx;
  font-size: 30rpx;
  line-height: 30rpx;
  padding: 21rpx 0;
  text-align: center;
  font-weight: 700;
  border-radius: 12rpx;
}
.canfinish {
  background-color: #36BC96;
  color: #FFFFFF;
}
.nofinish {
  background-color: #E6E6E6;
  color: #999999;
}
.leave {
  margin-top: 24rpx;
  border: 1rpx solid #36BC96;
  color: #36BC96;
}
/* 推荐阅读 */
.course {
  padding: 24rpx;
}
.course .title{
  font-size: 30rpx;
  font-weight: 700;
  line-height: 30rpx;
  color: #333;
  margin: 12rpx 0 24rpx;
}
.master_item {
  position: relative;
  width: 100%;
  height: 189rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  margin-bottom: 24rpx;
  box-shadow: 0rpx 4rpx 13rpx 0rpx #E8EDEC;
}
.item_left {
  padding: 24rpx;
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
  justify-content: space-between;
}
.item_title {
  font-size: 25rpx;
  color: #333;
  font-weight: 700;
  align-self: flex-start;
}
.item_time_author {
  display: flex;
  justify-content: flex-start;
}
.item_time_author .end {
  background: rgba(54, 188, 150, 0.2);
  color: #36BC96;
}
.item_time_author text {
  display: inline-block;
  padding: 8rpx 18rpx;
  background-color: #F5F7FB;
  font-size: 19rpx;
  color: #999999;
  line-height: 19rpx;
  border-radius: 18rpx;
  margin-right: 11rpx;
}
.item_date {
  padding-right: 20rpx;
}
.item_right {
  padding: 12rpx;
}
.qianzhang {
  position: absolute;
  top: 1rpx;
  right: 1rpx;
  width: 100rpx;
  height: 100rpx;
}
.item_image {
  width: 248rpx;
  height: 164rpx;
  border-radius: 12rpx;
}