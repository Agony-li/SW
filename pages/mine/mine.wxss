/* pages/mine/mine.wxss */
.header {
  height: 210rpx;
  background-color: #36BC96;
  display: flex;
  align-items: center;
  padding-left: 56rpx;
  padding-right: 49rpx;
  justify-content: space-between;
}
.header_left {
  display: flex;
  align-items: center;
}
.header_icon {
  width: 137rpx;
  height: 137rpx;
  background-color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.header_img {
  width: 117rpx;
  height: 117rpx;
  border-radius: 50%;
}
.header_name {
  font-size: 42rpx;
  font-weight: 700;
  color: #fff;
  padding-left: 33rpx;
}
.header_right_arrow {
  width: 13rpx;
  height: 22rpx;
}

/* 内容 */
.containers {
  padding: 36rpx 25rpx 27rpx;
}
.module {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  box-shadow: 0rpx 4rpx 13rpx 0rpx #E8EDEC;
}
.list_item {
  height: 90rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0 24rpx;
  border-bottom: 1rpx solid #E7E7E7;
}
.list_item:last-of-type {
  border-bottom: 0rpx;
}
.item_left {
  display: flex;
  flex-wrap: nowrap;
}
.item_icon {
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
  padding-right: 18rpx;
}
.item_text {
  font-size: 30rpx;
  color: #333;
}
.item_right_arrow {
  width: 13rpx;
  height: 22rpx;
}